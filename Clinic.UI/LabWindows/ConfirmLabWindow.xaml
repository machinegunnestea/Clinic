<Window x:Class="Clinic.UI.LabWindows.ConfirmLabWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clinic.UI.LabWindows"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Ввод" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="50,20">
            <TextBlock Text="Заключение:" />
            <TextBox Height="150px" materialDesign:HintAssist.Hint="Итог исследования..." Style="{StaticResource MaterialDesignTextBox}"/>
            <Button Content="OK" Width="100px" Margin="0, 20" Background="OrangeRed"/>
        </StackPanel>
    </Grid>
</Window>
